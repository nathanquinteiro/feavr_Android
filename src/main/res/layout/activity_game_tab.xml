<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="quinteiro.nathan.feavr.Activities.gameTabActivity"
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/gameLayout"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/btLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Random Lamps" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_lamps" />

                <Switch
                    android:id="@+id/SwLamp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sw1" />
                <Switch
                    android:id="@+id/SwLamp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw2" />
                <Switch
                    android:id="@+id/SwLamp3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw3" />
                <Switch
                    android:id="@+id/SwLamp4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sw4" />
                <Switch
                    android:id="@+id/SwLamp5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw5" />


                <Switch
                    android:id="@+id/SwLamp6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sw6" />
                <Switch
                    android:id="@+id/SwLamp7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw7" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <Switch
                    android:id="@+id/SwLamp8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw8" />
                <Switch
                    android:id="@+id/SwLamp9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sw9" />
                <Switch
                    android:id="@+id/SwLamp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw10" />


                <Switch
                    android:id="@+id/SwLamp11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sw11" />
                <Switch
                    android:id="@+id/SwLamp12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw12" />
                <Switch
                    android:id="@+id/SwLamp13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw13" />
                <Switch
                    android:id="@+id/SwLamp14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sw14" />
                <Switch
                    android:id="@+id/SwLamp15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="@string/sw15" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">





            </LinearLayout>




            <com.jjoe64.graphview.GraphView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/graph"
                />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
